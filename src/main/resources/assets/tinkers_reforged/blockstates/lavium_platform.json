{
  "multipart": [
    {
      "when": {
        "up": "false",
        "down": "false"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/both"
      }
    },
    {
      "when": {
        "up": "false",
        "down": "true"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/top"
      }
    },
    {
      "when": {
        "up": "true",
        "down": "false"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/bottom"
      }
    },
    {
      "when": {
        "up": "true",
        "down": "true"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/neither"
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/side",
        "y": 180
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/side",
        "y": 270
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/side"
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "tinkers_reforged:block/platform/lavium/side",
        "y": 90
      }
    }
  ]
}